<?xml version="1.0" encoding="UTF-8" ?>
<Configuration name="DemeterLogConfig" status="WARN">
    <Properties>
        <Property name="loggingPattern">[%d{dd.MM.yyyy HH:mm:ss.SSS}][%-5level][%t] %C{1} - %msg%n</Property>
    </Properties>
    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="${loggingPattern}"/>
        </Console>
        <RollingFile name="rollingFile" fileName="logs/reqman.log"
                     filePattern="logs/$${date:yyyy-MM}/demeter-dev-%d{MM-dd-yyyy}-%i.log.gz">
            <PatternLayout pattern="${loggingPattern}"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="10 MB"/>
            </Policies>
        </RollingFile>
    </Appenders>
    <Loggers>
        <!-- GENERAL DEMETER -->
        <Logger name="com.github.sauterl.demeter" level="DEBUG" additivity="false">
            <AppenderRef ref="console"/>
            <AppenderRef ref="rollingFile"/>
        </Logger>
        <!-- ROOT -->
        <Root level="DEBUG"/>
    </Loggers>
</Configuration>